---
// UI used for heading title on each page.

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header>
  <h1>{title}</h1>
  <slot />
</header>

<style>
/* Apply the styles to the parent container */
.scroll-container {
  position: relative; /* Make sure the container is positioned relatively */
  overflow: hidden; /* Prevents overflow of the background elements */
}

/* Pseudo-elements to scroll with the content */
.scroll-container::before,
.scroll-container::after {
  content: "";
  position: absolute;
  pointer-events: none;
  background: var(--color-theme);
  z-index: -1;
  opacity: 0.1;
  height: 60%;
  aspect-ratio: 2;
  filter: blur(32px);
  width: 100%; /* Ensure the pseudo-elements take up the full width */
}

.scroll-container::before {
  top: 0;
  left: 0;
  right: 0;
  bottom: auto;
  clip-path: polygon(0 0, 100% 0, 100% 100%);
}

.scroll-container::after {
  top: auto;
  bottom: 0;
  left: 0;
  right: 0;
  clip-path: polygon(0 0, 100% 100%, 0 100%);
}

h1 {
  font-size: 1.6rem;
  letter-spacing: 0.05em;
}
</style>
